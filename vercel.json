{
  "rewrites": [
    {
      "source": "/blog",
      "destination": "/blog/"
    },
    {
      "source": "/blog/([a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12})",
      "destination": "/index.html"
    },
    {
      "source": "/blog/(.*)",
      "destination": "/blog/$1"
    },
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ]
}