{
  "builds": [
    {
      "src": "blog/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/blog/sitemap\.xml",
      "dest": "/blog/sitemap.xml"
    },
    {
      "src": "/blog/(.*)",
      "dest": "/blog/$1"
    },
    {
      "src": "/((?!api/.*).*)",
      "dest": "/index.html"
    }
  ]
}